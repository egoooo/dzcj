<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_title_c"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="表头测试" />

    <newjohn.com.dzcj.listviewscroll.CHScrollView
        android:id="@+id/item_scroll_c"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_data1_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#011" />

            <TextView
                android:id="@+id/item_data2_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#191" />

            <TextView
                android:id="@+id/item_data3_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#57C5E8" />

            <TextView
                android:id="@+id/item_data4_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/item_data5_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/color4" />

            <TextView
                android:id="@+id/item_data6_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/color4" />
            <TextView
                android:id="@+id/item_data7_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#57C5E8" />

            <TextView
                android:id="@+id/item_data8_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/item_data9_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/color4" />

            <TextView
            android:id="@+id/item_data10_c"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/color4" />
            <TextView
                android:id="@+id/item_data11_c"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/color4" />


        </LinearLayout>
    </newjohn.com.dzcj.listviewscroll.CHScrollView>


</LinearLayout>